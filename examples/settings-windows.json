{
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"C:/Program Files/Git/bin/bash.exe\" -lc \"$HOME/.claude/hooks/session-start-context.sh\""
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"C:/Program Files/Git/bin/bash.exe\" -lc \"$HOME/.claude/hooks/skill-activation-prompt.sh\""
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "\"C:/Program Files/Git/bin/bash.exe\" -lc \"$HOME/.claude/hooks/pre-tool-use-safety.sh\""
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "\"C:/Program Files/Git/bin/bash.exe\" -lc \"$HOME/.claude/hooks/post-tool-use-tracker.sh\""
          },
          {
            "type": "command",
            "command": "\"C:/Program Files/Git/bin/bash.exe\" -lc \"$HOME/.claude/hooks/post-tool-use-format.sh\""
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"C:/Program Files/Git/bin/bash.exe\" -lc \"$HOME/.claude/hooks/stop-verification.sh\""
          }
        ]
      }
    ]
  }
}
